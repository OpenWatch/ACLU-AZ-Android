<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="net.openwatch.acluaz"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <provider
            android:name="net.openwatch.acluaz.contentprovider.ACLUAZContentProvider"
            android:authorities="net.openwatch.acluaz.contentprovider.ACLUAZContentProvider"
            android:exported="false" >
        </provider>

        <activity
            android:name="net.openwatch.acluaz.MainActivity"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="net.openwatch.acluaz.FormFragmentActivity"
            android:parentActivityName="net.openwatch.acluaz.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="net.openwatch.acluaz.MainActivity" />
        </activity>
        <activity android:name="net.openwatch.acluaz.IncidentFeedFragmentActivity" >
        </activity>
        <activity
            android:name="net.openwatch.acluaz.RightsActivity"
            android:parentActivityName="net.openwatch.acluaz.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="net.openwatch.acluaz.MainActivity" />
        </activity>
        <activity
            android:name="net.openwatch.acluaz.PDFViewActivity"
            android:label="@string/title_activity_pdfview"
            android:parentActivityName="net.openwatch.acluaz.RightsActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="net.openwatch.acluaz.RightsActivity" />
        </activity>
    </application>

</manifest>