<?xml version="1.0" encoding="utf-8"?>
<!-- Thanks! http://android.onyou.ch/2011/01/25/simple-custom-button-using-a-selector-xml-layout/ -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- disabled -->
    <item android:state_enabled="false"><color android:color="@color/off_white_pressed"/>
    </item>

    <!-- pressed -->
    <item android:state_pressed="true"><color android:color="@color/off_white_pressed"/>
    </item>

    <!-- focused -->
    <item android:state_focused="true"><color android:color="@color/off_white_pressed"/>
    </item>

    <!-- default -->
    <item><color android:color="@color/off_white"/>
    </item>

</selector>